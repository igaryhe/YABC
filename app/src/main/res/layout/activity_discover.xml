<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".DiscoverActivity"
        android:orientation="vertical">

    <com.google.android.material.appbar.AppBarLayout
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:theme="@style/BgmLightTheme.AppBarOverlay">
        <!--
        <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:background="?attr/colorPrimary"
                app:popupTheme="@style/BgmLightTheme.PopupOverlay"/>
                -->

        <com.google.android.material.tabs.TabLayout
                android:id="@+id/cal_tab"
                style="@style/Widget.MaterialComponents.TabLayout.Colored"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:tabIndicatorColor="#FFFFFF" app:tabMode="scrollable"/>

    </com.google.android.material.appbar.AppBarLayout>

    <io.igaryhe.yabc.VerticalSwipeRefreshLayout
            android:id="@+id/swipe_refresh"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <androidx.viewpager.widget.ViewPager
                android:id="@+id/calendar_pager"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
    </io.igaryhe.yabc.VerticalSwipeRefreshLayout>

</LinearLayout>