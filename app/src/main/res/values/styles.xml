<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="BgmLightTheme" parent="Theme.AppCompat.Light">
        <item name="colorPrimary">@color/bgmPrimary</item>
        <item name="colorPrimaryDark">@color/bgmPrimaryDark</item>
        <item name="android:colorSecondary">@color/bgmSecondary</item>
    </style>
    
    <style name="BgmLightTheme.Launcher">
        <item name="android:windowBackground">@drawable/bgm_launcher_background</item>
    </style>
</resources>
